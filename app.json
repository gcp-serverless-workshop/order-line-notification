{
  "name": "skatepark-CCTV-line",
  "env": {
    "LINE_CHANNEL_SECRET": {
      "description": "LINE Bot secret key",
      "value": "ooooooo",
      "required": true
    },
    "LINE_CHANNEL_ACCESS_TOKEN": {
      "description": "LINE Bot access key",
      "value": "xxxxxxxx",
      "required": true
    },
    "API_ENV": {
      "value": "production",
      "required": true
    },
    "LOG": {
      "description": "Log level",
      "value": "INFO"
    },
    "LIFF_ID": {
      "description": "LIFF channel ID",
      "value": "abcdef-12345"
    },
    "FIREBASE_CRED": {
      "description": "Firebase credential",
      "value": "'{\"type\":.....,}'"
    },
    "PORT": {
      "description": "Port forward",
      "value": "8080"
    }
  },
  "options": {
    "allow-unauthenticated": true,
    "memory": "512Mi",
    "cpu": "1",
    "http2": false,
    "concurrency": 10,
    "max-instances": 5
  },
  "hooks": {
    "precreate": {
      "commands": ["echo 'test'"]
    },
    "postcreate": {
      "commands": [
        "echo '========================'",
        "gcloud run services describe ${NAME} --platform=managed --region=${REGION} --project=${PROJECT} --format='value(status.address.url)'"
      ]
    }
  }
}
